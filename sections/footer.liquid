<footer class="full-width">  
  <div class="footer__top__container">
    <div class="footer__links">
      {% for link in section.settings.menu.links %}
        {{ link.title | link_to: link.url }}
      {% endfor %}
    </div>
    <div class="footer__media__links">
      {% if section.blocks.size > 0 %}
        {% for block in section.blocks %}
          {% case block.type %}
            {% when 'media_links' %}
              <a class="footer__media__link" href="{{ block.settings.link }}">
                <img src="{{ block.settings.icon | image_url: width: 20, height: 20 }}" alt="{{ block.settings.title }}" width="20" height="20">
              </a>
          {% endcase %}
        {% endfor %}
      {% endif %}
    </div>
  </div>
  <div class="footer__divider"></div>
  <div class="footer__bottom__container">
    <div class="footer__payment__container">
      <p class="footer__payment__title">
        Payment Methods
      </p>
      <div class="footer__payment">
        {% if section.settings.show_payment_icons %}
          {% for type in shop.enabled_payment_types %}
            {{ type | payment_type_svg_tag }}
          {% endfor %}
        {% endif %}
      </div>
    </div>

    <div class="footer__copyright">
      &copy;
      {{ 'now' | date: '%Y' }}
      {{ shop.name | link_to: routes.root_url }}
    </div>

  </div>
</footer>

{% stylesheet %}
  footer {
    display: flex;
    justify-content: space-between;
    margin-top: 2rem;
    background-color: var(--color-foreground);
    padding: 48px 72px;
    flex-direction: column;
  }
  footer a {
    text-decoration: none;
    color: var(--color-background);
  }
  footer .footer__top__container {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }
  footer .footer__payment__container {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }
  footer .footer__links,
  footer .footer__payment {
    display: flex;
    gap: 1rem;
    color: var(--color-background);
  }
  footer .footer__copyright,
  footer .footer__payment__title {
    font-family: var(--font-primary--family);
  }
  footer .footer__payment__title {
    font-size: 1rem;
    font-weight: 600;
    color: white;
  }
  footer .footer__copyright, footer .footer__copyright a {
    color: var(--color-secondary);
  }
  footer .footer__divider {
    width: 100%;
    height: 1px;
    background-color: var(--color-background);
    margin: 2rem 0;

  }
  .footer__media__link {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    width: 40px;
    height: 40px;
    background-color: rgba(255, 255, 255, 0.1);
    border-radius: 50%;
    margin: 0 0.5rem;
    transition: all 0.3s ease;
  }
  
  .footer__media__link:hover {
    background-color: rgba(255, 255, 255, 0.2);
    transform: translateY(-2px);
  }
  
  .footer__media__link img {
    width: 20px;
    height: 20px;
    filter: brightness(0) invert(1);
  }
  footer .footer__bottom__container {
    display: flex;
    justify-content: space-between;
    align-items: left;
  }

  @media screen and (max-width: 768px) {
    footer {
      padding: 32px 24px;
    }
    
    footer .footer__top__container {
      gap: 2rem;
      align-items: center;
    }
    div.footer__media__links{
      flex-shrink: 0;
    }
    footer .footer__links {
      flex-wrap: wrap;
      justify-content: left;
      width: 100%;
      display: flex;
    }
    
    footer .footer__bottom__container {
      flex-direction: column;
      gap: 2rem;
      align-items: center;
      text-align: center;
    }
    
    footer .footer__payment__container {
      align-items: center;
    }
    
    footer .footer__payment {
      justify-content: center;
      flex-wrap: wrap;
    }
  }

  @media screen and (max-width: 480px) {
    footer {
      padding: 24px 16px;
    }
    
    footer .footer__links {
      flex-direction: row;
      gap: 0.5rem;
      width: 100%;
    }
    
    div.footer__media__links {
      margin-top: 1rem;
      flex-shrink: 0;
    }
    
    footer .footer__payment__title {
      font-size: 0.9rem;
    }
  }

  @media screen and (min-width: 1024px) {
    footer {
      padding: 64px 96px;
    }
    
    footer .footer__top__container {
      gap: 3rem;
    }
    
    footer .footer__links {
      gap: 1.5rem;
    }
    
    div.footer__media__links {
      flex-shrink: 0;
      gap: 1rem;
    }
    
    footer .footer__payment__title {
      font-size: 1.1rem;
    }
    
    footer .footer__copyright {
      font-size: 1rem;
    }
  }
{% endstylesheet %}

