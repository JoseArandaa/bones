  
  <div class="main-cards__container" style="margin-top: {{ section.settings.section_spacing_top }}px; margin-bottom: {{ section.settings.section_spacing_bottom }}px;">
    {% if section.settings.title != blank %}
      <h2 class="main-cards__title">{{ section.settings.title }}</h2>
    {% endif %}
    <div class="main-cards">
    {% assign collection = collections[section.settings.collection] %}
    {% if collection != blank %}
      {% for product in collection.products limit: section.settings.limit %}
        <div class="main-cards__card__product" style="width: {{ 100 | divided_by: section.settings.limit }}%;">
          <img src="{{ product.images[0] | image_url: width: 800 }}" alt="{{ product.title | default: 'Slide' }}" width="800" height="400" loading="eager" style="border-radius: 0.5rem;">
          <div class="main-cards__card__product__content">
          <h2 class="main-cards__card__product__title">{{ product.title }}</h2>
          {% if section.settings.show_description %}
            <p class="main-cards__card__product__description">{{ product.description | strip_html }}</p>
          {% endif %}
          </div>
        </div>
      {% endfor %}
    {% else %}
      <p>Por favor selecciona una colección en la configuración de la sección.</p>
    {% endif %}
  </div>
</div>

{% schema %}
{
  "name": "Main Cards",
  "presets": [
    {
      "name": "Main Cards"
    }
  ],
  "settings": [
    {
      "type": "collection",
      "id": "collection",
      "label": "Collection"
    },
    {
        "id": "limit",
        "label": "Limit",
        "type": "number",
        "default": 3
    },
    {
        "id": "title",
        "label": "Title",
        "type": "text",
        "default": "Main Cards"
    },
    {
        "id": "section_spacing_top",
        "type": "range",
        "label": "Espaciado superior (px)",
        "min": 0,
        "max": 100,
        "step": 1,
        "default": 16,
        "info": "Controla el espacio superior de esta sección"
    },
    {
        "id": "section_spacing_bottom",
        "type": "range",
        "label": "Espaciado inferior (px)",
        "min": 0,
        "max": 100,
        "step": 1,
        "default": 16,
        "info": "Controla el espacio inferior de esta sección"
    },
    {
         "id": "show_description",
         "type": "checkbox",
         "label": "Show description",
         "default": true
    }
  ]
}
{% endschema %}

{% stylesheet %}
.main-cards {
  display: flex;
  gap: 1rem;
  padding: 0;
  width: 100%;
}
.main-cards__title {
  font-size: 1.5rem;
  font-weight: 700;
  font-family: var(--font-primary--family);
  color: var(--color-foreground);
  text-align: left;
  margin-bottom: 2rem;
}
.main-cards__card__product {
  display: flex;
  flex-direction: column;
  gap: 1rem;
  object-fit: cover;
  gap:1rem;
}
.main-cards__card__product img {
  border-radius: 0.5rem;
  width: 100%;
  height: 300px;
  object-fit: cover;
}
.main-cards__card__product__title {
  font-size: 1rem;
  font-weight: 600;
  font-family: var(--font-primary--family);
  color: var(--color-foreground);
  display: -webkit-box;
  display: box; /* fallback más antiguo */
  -webkit-line-clamp: 1;
  line-clamp: 1; /* propiedad estándar */
  -webkit-box-orient: vertical;
  box-orient: vertical;
  overflow: hidden;
  text-overflow: ellipsis;
}
 .main-cards__card__product__description {
   font-size: 0.8rem;
   font-weight: 400;
   font-family: var(--font-primary--family);
   color: var(--color-secondary);
   display: -webkit-box;
  display: box; /* fallback más antiguo */
  -webkit-line-clamp: 2;
  line-clamp: 2; /* propiedad estándar */
  -webkit-box-orient: vertical;
  box-orient: vertical;
  overflow: hidden;
  text-overflow: ellipsis;
 }

 /* Responsive styles - solo para móviles */
 @media screen and (max-width: 768px) {
   .main-cards {
     flex-direction: column;
     gap: 1.5rem;
   }
   
   .main-cards__card__product {
     width: 100% !important;
   }
   
   .main-cards__card__product img {
     height: 250px;
   }
   
   .main-cards__title {
     font-size: 1.25rem;
     margin-bottom: 1.5rem;
   }
   
   .main-cards__card__product__title {
     font-size: 0.9rem;
   }
   
   .main-cards__card__product__description {
     font-size: 0.75rem;
   }
 }

 @media screen and (max-width: 480px) {
   .main-cards__card__product img {
     height: 200px;
   }
   
   .main-cards__title {
     font-size: 1.1rem;
     margin-bottom: 1rem;
   }
 }

 /* Pantallas grandes (lg) */
 @media screen and (min-width: 1024px) {
   .main-cards__title {
     font-size: 1.75rem;
     margin-bottom: 2.5rem;
   }
   
   .main-cards__card__product img {
     height: 350px;
   }
   
   .main-cards__card__product__title {
     font-size: 1.1rem;
   }
   
   .main-cards__card__product__description {
     font-size: 0.85rem;
   }
 }
{% endstylesheet %}
